<div id="collapsed-note-bar"
    class="bg-white rounded-lg shadow-md p-3 px-4 cursor-text hover:shadow-lg transition-all duration-300 ease-in-out opacity-100 transform scale-100">
    <span class="text-gray-600">Take a note...</span>
</div>

<div id="expanded-note-form"
    class="hidden bg-white rounded-lg shadow-md p-4 transition-all duration-300 ease-in-out opacity-0 transform scale-95">
    <form action="/notes/create" method="post" id="note-form">
        <div class="rounded-lg bg-gray-100 p-1 mb-2">
            <input type="text" id="note-title-input" name="title" placeholder="Title"
                class="w-full px-3 py-2 text-base font-medium placeholder-gray-500 border-none focus:outline-none focus:ring-0 bg-transparent" />

            <hr class="mb-2 border-gray-300">

            <textarea id="note-content-input" name="content" placeholder="Take a note..." rows="5"
                class="w-full px-3 py-2 text-sm placeholder-gray-600 border-none focus:outline-none focus:ring-0 resize-none bg-transparent"></textarea>
        </div>

        <div class="flex items-center mb-3 mt-5">
            <label for="tag-input" class="block text-sm font-medium text-gray-700 mr-2">
                Tags
            </label>

            <div class="flex-1">
                <div id="tags-container"
                    class="flex flex-wrap items-center gap-2 border-b border-gray-300 rounded p-1">
                    <input type="text" id="tag-input" placeholder="Add a tag..."
                        class="w-auto px-1 py-0.5 text-sm bg-transparent outline-none" />
                </div>
                <input type="hidden" name="tags" id="hidden-tags-input" />
            </div>
        </div>

        <div class="flex items-center justify-between pt-2 space-x-2">
            
            <div class="flex items-center space-x-1 self-start">
                <div class="py-1.5 px-1 rounded hover:bg-gray-100">
                    <label for="cover-upload" class="flex items-center space-x-1">
                        <i class="fas fa-camera fa-fw text-gray-700"></i>
                        <span class="text-sm font-medium text-gray-700">Add a Cover Photo</span>
                    </label>
                    <input type="file" id="cover-upload" name="cover" class="hidden" />
                </div>
                <div id="cover-upload-container"
                    class="hidden flex items-center w-auto h-8 bg-gray-200 rounded">
                </div>
            </div>



            <div class="flex items-center space-x-2">
                <button type="submit"
                    class="px-4 py-1.5 rounded text-sm font-medium bg-yellow-400 hover:bg-yellow-500 text-gray-800 transition-colors duration-150">
                    Save
                </button>
                <button type="button" id="close-note-form"
                    class="px-4 py-1.5 rounded text-sm font-medium text-gray-700 hover:bg-gray-100 transition-colors duration-150">
                    Close
                </button>
            </div>
        </div>
    </form>
</div>