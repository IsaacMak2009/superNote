<div id="collapsed-note-bar" class="bg-white rounded-lg shadow-md p-3 px-4 cursor-text hover:shadow-lg transition-all duration-300 ease-in-out opacity-100 transform scale-100">
    <span class="text-gray-600">Take a note...</span>
</div>

<div id="expanded-note-form" class="hidden bg-white rounded-lg shadow-md p-4 transition-all duration-300 ease-in-out opacity-0 transform scale-95">
    <form action="/notes/create" method="post" id="note-form">
        <input
            type="text"
            id="note-title-input"
            name="title" placeholder="Title"
            class="w-full px-2 py-1 mb-2 text-base font-medium placeholder-gray-500 border-none focus:outline-none focus:ring-0 bg-transparent"
        />

        <hr class="mb-2 border-gray-300">

        <textarea
            id="note-content-input"
            name="content" placeholder="Take a note..."
            rows="3"
            class="w-full px-2 py-1 mb-2 text-sm placeholder-gray-600 border-none focus:outline-none focus:ring-0 resize-none bg-transparent"
        ></textarea>

        <div id="tags-area" class="mb-3 flex">
             <label 
                for="tag-input" 
                class="block text-sm font-medium text-gray-700 mb-1">
                Tags
            </label>

            <div id="tags-container" class="flex flex-wrap items-center gap-2 p-2 border-b border-gray-300 rounded min-h-[40px]">
                <input
                    type="text"
                    id="tag-input"
                    placeholder="Add a tag..."
                    class="w-full px-1 py-0.5 text-sm border-none focus:outline-none focus:ring-0 bg-transparent"
                />
            </div>
            <input type="hidden" name="tags" id="hidden-tags-input" />
        </div>
        <div class="flex justify-end items-center pt-2 space-x-2">
            <button
               type="submit"
               class="px-4 py-1.5 rounded text-sm font-medium bg-yellow-400 hover:bg-yellow-500 text-gray-800 transition-colors duration-150"
            >
               Save
            </button>
            <button
               type="button"
               id="close-note-form"
               class="px-4 py-1.5 rounded text-sm font-medium text-gray-700 hover:bg-gray-100 transition-colors duration-150"
            >
               Close
            </button>
        </div>
    </form>
</div>